
package ExceptionHandling;


public class Magician extends Character {
    
    public Magician(int defense, int attack, int HP){
        super(defense, attack, HP);
    }
    public boolean attack(){
        double hitChance = Math.random();
        if(hitChance > 0.35){
            return true;
        }
        else{
            return false;
        }
    }
}
