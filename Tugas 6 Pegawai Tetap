
package Pegawai;

public class PegawaiTetap extends Pegawai{
    private double upah;
    
    PegawaiTetap(String nama, String noKTP, double upah){
        super(nama, noKTP);
        this.upah = upah;
    }
    public void setUpah(double upah){
        this.upah = upah;
    }
    public double getUpah(){
        return upah;
    }
    public double gaji(){
        return upah;
    }
    public String toString(){
        return "Pegawai Tetap\t: "+super.getNama()+super.toString()+"\nUpah\t\t: Rp "+upah+"\nPendapatan\t: Rp "+gaji();
    }
}
