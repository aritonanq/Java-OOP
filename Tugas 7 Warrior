
package ExceptionHandling;

public class Warrior extends Character {
    
    public Warrior(int defense, int attack, int HP){
        super(defense, attack, HP);
    }
    public boolean attack(){
        double hitChance = Math.random();
        if(hitChance > 0.6){
            return true;
        }
        else{
            return false;
        }
    }
}
